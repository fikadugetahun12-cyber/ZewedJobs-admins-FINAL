// Add new post
const newPost = {
    title: 'New Post Title',
    slug: 'new-post-title',
    category: 'news',
    status: 'draft',
    excerpt: 'Post excerpt...',
    content: '<p>Post content...</p>',
    tags: ['tag1', 'tag2'],
    author: 'Current User'
};

const result = dataLoader.addPost(newPost);
if (result.success) {
    console.log('Post created:', result.post);
}

// Update post
const updateResult = dataLoader.updatePost('post_001', {
    title: 'Updated Title',
    status: 'published'
});

// Delete post
const deleteResult = dataLoader.deletePost('post_001');
